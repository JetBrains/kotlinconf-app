<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red_orange</item>
        <item name="colorPrimaryDark">@color/dark_grey</item>
        <item name="colorAccent">@color/red_orange</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="H4BlackRoboto">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:textColor">#9b9b9b</item>
    </style>

    <style name="H4Roboto">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="TextRoboto">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">9sp</item>
        <item name="android:textColor">@color/dark_grey_70</item>
    </style>
</resources>
